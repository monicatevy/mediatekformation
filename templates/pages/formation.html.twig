{% extends "basefront.html.twig" %}
{% block body %}
    {% if formation.videoid %}
    {% else %}
        <div class="alert alert-warning mt-2 mb-2">
            Nous sommes désolés, aucune vidéo n'a été trouvée.
        </div>
    {% endif %}
    <div class="row mt-3">
        <div class="col">
            <!-- emplacement de la vidéo -->
            {% if formation.videoid %}
                <iframe width="560" height="315" 
                        src="https://www.youtube.com/embed/{{ formation.videoid }}" 
                        title="YouTube video player" frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                </iframe>
            {% else %}
                <div>
                    <img width="560" height="315" src="https://artsmidnorthcoast.com/wp-content/uploads/2014/05/no-image-available-icon-6.png">
                </div>
            {% endif %}
        </div>
        <div class="col">
            <h5> {{ formation.publishedatstring }}</h5>
            <h3 class="text-info mt-4">{{ formation.title }}</h3>
            <h5 class="mt-2">{{ formation.level }}</h5>
            <p>&nbsp;</p>
            <p><strong>description :</strong></p>
            <p>
                {{ formation.description|nl2br }}
            </p>
        </div>
    </div>
{% endblock %}