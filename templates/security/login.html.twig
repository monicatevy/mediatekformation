{% extends 'base.html.twig' %}

{% block title %}Connexion | MediaTek86{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger mt-4" style="position: relative">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
              <div class="col-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                  <div class="card-body p-5">

                    <h3 class="mb-4 text-center">Connexion</h3>

                    <div class="form-outline mb-4">
                      <label for="inputEmail">Adresse email</label>
                      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="form-outline mb-4">
                      <label for="inputPassword">Mot de passe</label>
                      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </form>
    
    {% if app.user %}
        <div class="text-center">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    
{% endblock %}
